<mvc:View
    controllerName="gestionale.controller.Dashboard"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns:grid="sap.ui.layout.cssgrid">

    <f:DynamicPage id="dynamicPage" headerExpanded="true">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{i18n>dashboardTitle}" level="H1"/>
                </f:heading>
                <f:expandedContent>
                    <Label text="Overview of company performance"/>
                </f:expandedContent>
            </f:DynamicPageTitle>
        </f:title>

        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <layout:HorizontalLayout allowWrapping="true">
                    <layout:VerticalLayout class="sapUiMediumMarginEnd">
                        <Label text="Current Quarter" design="Bold"/>
                        <ObjectStatus text="Active" state="Success" icon="sap-icon://sys-enter-2"/>
                    </layout:VerticalLayout>
                </layout:HorizontalLayout>
            </f:DynamicPageHeader>
        </f:header>

        <f:content>
            <VBox class="sapUiSmallMargin">
                <!-- KPI Tiles -->
                <HeaderContainer scrollStep="200" showDividers="false" class="sapUiSmallMarginBottom">
                    <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Total Revenue" subheader="Year to Date">
                        <TileContent footer="Current">
                            <NumericContent value="{productModel>/metrics/totalRevenue}" icon="sap-icon://money-bills" valueColor="Good" withMargin="false" />
                        </TileContent>
                    </GenericTile>
                    
                    <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Growth" subheader="vs Last Year">
                        <TileContent footer="Steady">
                            <NumericContent value="{productModel>/metrics/revenueGrowth}" scale="%" direction="Up" valueColor="Good" icon="sap-icon://line-chart" />
                        </TileContent>
                    </GenericTile>

                    <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="New Orders" subheader="This Month">
                        <TileContent>
                            <NumericContent value="{productModel>/metrics/newOrders}" icon="sap-icon://cart" valueColor="Neutral" />
                        </TileContent>
                    </GenericTile>
                    
                    <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Employees" subheader="Active" press=".onMakeCoffee">
                        <TileContent>
                            <NumericContent value="{productModel>/metrics/activeEmployees}" icon="sap-icon://group" />
                        </TileContent>
                    </GenericTile>
                </HeaderContainer>

                <Title text="Quick Actions" class="sapUiSmallMarginTop mw-100" />
                <HBox class="sapUiSmallMarginTop" wrap="Wrap">
                    <GenericTile class="sapUiTinyMarginBegin tileLayout" header="Manage Products" subheader="Inventory control" press=".onNavToProducts">
                        <TileContent>
                            <ImageContent src="sap-icon://product" />
                        </TileContent>
                    </GenericTile>
                    <GenericTile class="sapUiTinyMarginBegin tileLayout" header="Manage Customers" subheader="Client Directory" press=".onNavToCustomers">
                        <TileContent>
                            <ImageContent src="sap-icon://customer" />
                        </TileContent>
                    </GenericTile>
                    <GenericTile class="sapUiTinyMarginBegin tileLayout" header="Manage Orders" subheader="Track Shipments" press=".onNavToOrders">
                        <TileContent>
                            <ImageContent src="sap-icon://shipping-status" />
                        </TileContent>
                    </GenericTile>
                </HBox>

            </VBox>
        </f:content>
    </f:DynamicPage>
</mvc:View>
